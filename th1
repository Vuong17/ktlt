A)
struct GiaoVien {
	char MaGiaoVien[15], HoTen[30];
	int namsinh;
};
struct DeTai {
	char MaDeTai[15], TenDeTai[30];
	GiaoVien gv;
	int SoSinhVienToiDa, NamThucHien;
};
B)

void InDanhSachGiaoVienLeHoangHai(DeTai dsDT[], int n)
{
	int i, dem = 1;
	for (i = 0;i < n;i++) {
		if (strcmp(dsDT[i].gv.HoTen, "Le Hoang Hai") == 0) {
			printf("\tThong tin de tai do Le Hoang Hai huong dan thu %d\n", dem++);
			printf("Ma de tai: %s\n", dsDT[i].MaDeTai);
			printf("Ten de tai: %s\n", dsDT[i].TenDeTai);
			printf("Ma giao vien: %s\n", dsDT[i].gv.MaGiaoVien);
			printf("Ho ten gv: %s\n", dsDT[i].gv.HoTen);
			printf("Nam sinh: %d\n", dsDT[i].gv.namsinh);
			printf("So sinh vien toi da: %d\n", dsDT[i].SoSinhVienToiDa);
			printf("Nam thuc hien: %d\n", dsDT[i].NamThucHien);
		}
	}
}
C)
SapXepGiamDanTheoNamThucHienBangThuatToanQuickSort(DeTai dsDT[], int left, int right) {
	int i, j;
	DeTai x;
	if (left >= right) {
		return;
	}
	x = dsDT[(left + right) / 2];
	i = left;
	j = right;
	while (i < j) {
		while (dsDT[i].NamThucHien > x.NamThucHien) {
			i++;
		}
		while (dsDT[j].NamThucHien < x.NamThucHien) {
			j--;
		}
		if (i <= j) {
			DeTai tam = dsDT[i];
			dsDT[i] = dsDT[j];
			dsDT[j] = tam;
			i++;
			j--;
		}
	}
	SapXepGiamDanBangThuatToanQuickSort(dsDT, left, j);
	SapXepGiamDanBangThuatToanQuickSort(dsDT, i, right);
}
int main() {
	int n;
	printf("Nhap so luong de tai: ");
	scanf("%d", &n);
	DeTai dsDT[n];
	return 0;
}
Câu 4
A)
float cau4a(int n) {
	if (n < 1) return 0;
	else {
		return pow(-1, n - 1) * (sqrt(n + 1) / (n * (n + 1))) + cau4a(n - 1);
	}
}
B)
int demLe(int a[], int i)
{
	if (i == -1)
		return 0;
	else
	{
		if (a[i] % 2 != 0)
			return 1 + demLe(a, i - 1);
		else
			return demLe(a, i - 1);
	}
}
