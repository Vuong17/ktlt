Câu 1 
A)
bool KTMangTang(int* a, int n)
{
    int* dem = 0;
    for (int i = 0; i < n – 1; i++)
    {
        if (*a[i + 1]) > = *a[i]))
        * dem++;
    }
    if (*dem == n – 1)
        return true;
    return false;
}
B)
void swap(int& a, int& b)
{
	int t = a;
	a = b;
	b = t;
}
Int partition(int arr[], int low, int high)
{
	Int pivot = arr[high];
	Int left = low;
	Int right = high - 1;
	While
	{
		While(left <= right && arr[left] < pivot) left++;
		While(right >= left && arr[right] > pivot) right--;
		If(left >= right) break;
		Swap(arr[left], arr[right];
		Left++;
		Right--;
	}
	swap(arr[left], arr[high]);
	return left;
}
void quickSort(int arr[], int low, int high)
{
	if (low < high)
	{
		int pi = partition(arr, low, high);
		quickSort(arr, low, pi - 1);
		quickSort(arr, pi + 1, high);
	}
}
int main() {
	int* a, n, i;
	printf("Nhap so luong mang: ");
	scanf("%d", &n);
	a = (int*)malloc(n * sizeof(int));
	for (i = 0;i < n;i++) {
		printf("Nhap a[%d]: ", i);
		scanf("%d", &a[i]);
	}
	if (CheckMangCoToanTang(a, n) == 1) printf("Cau a: Mang a la la mang toan tang\n");
	else printf("Cau a: Mang a khong phai la mang toan tang\n");
	quickSort(a, 0, n - 1);
	printf("Cau b: Mang a sau khi sap xep theo thuat toan Quick Sort la: ");
	for (i = 0;i < n;i++) {
		printf("%d ", a[i]);
	}
	Return 0;
}
Câu 2
A)
int TimX(int a[], int x) {
	for (int i = 0; i < 7; i++)
		if (a[i] == x)
			return i;
	return -1;
}
int main() {
	int a[] = { 5, 2, 9, 1, 6, 8 , 7 };
	int x;
	printf("Nhap vao phan tu muon tim: ");
	scanf("%d", &x);
	if (TimX == -1)
		printf("\nKhong tim thay phan tu trong mang!")
	else
		printf("Vi tri: %d ", TimX(a, x));
}
